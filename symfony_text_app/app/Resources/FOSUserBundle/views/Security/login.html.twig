{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
             <!--row-->
            <div class="row">
        		  <div class="col-lg-12 text-center v-center">
          			 <h1>
          				  Login
          			 </h1>
              </div>
            </div>
            <!-- /row -->

            <!--row-->
            <div class="row">
              <div class="col-md-4"></div><!--SPACING-->
                <div class="col-md-4 text-center">
          			   <div class="panel-body">

                    <!--Creating Div for message output-->
                    <div id ="message-output">

                      

                    </div>
                  <!--End of message output div-->

<form accept-charset="UTF-8" action="{{ path("fos_user_security_check") }}" role="form" method="post" class="form-horizontal">
      <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

    <div class ="form-group">
      <label for="username">{{ 'security.login.username'|trans }}</label>
      <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
    </div>

    <div class ="form-group">
      <label for="password">{{ 'security.login.password'|trans }}</label>
      <input type="password" id="password" name="_password" required="required" />
    </div>

    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
    <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>

    <div class ="form-group">
      <input type="submit" id="_submit" name="_submit" value="{{'security.login.submit'|trans }}" />
    </div>
</form>

</div> 
        		</div> 
            <div class="col-md-4"></div>
          </div>
      		<!-- /row -->        
{% endblock fos_user_content %}